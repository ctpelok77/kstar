#!/bin/bash
# $1 - name
# $2 - configs file
# $3 - suite file

RESULTS_BASE_DIR=~/results/$1
RESULTS_DIR=$RESULTS_BASE_DIR/`hg id -i`
BASELINE_DIR=$RESULTS_BASE_DIR/baseline

mkdir $RESULTS_DIR || exit



echo Creating Preprocessing Experiment
./downward_experiments.py --path exp-p -l WARNING -s `cat $3` --preprocess local

echo Running Preprocessing Experiment
exp-p/run

echo Fetching Preprocessing Results
./downward-resultfetcher.py exp-p -l WARNING 

echo Creating Experiment
./downward_experiments.py --path exp -l WARNING -c `cat $2` -s `cat $3` local

echo Running Experiment
exp/run

echo Storing Results
mv exp $RESULTS_DIR
mv exp-p $RESULTS_DIR
mv preprocessed-tasks $RESULTS_DIR

echo Fetching Results
rm -fr exp-eval
./downward-resultfetcher.py $RESULTS_DIR/exp -l WARNING --dest `pwd`/exp-eval
./downward-resultfetcher.py $BASELINE_DIR/exp -l WARNING --dest `pwd`/exp-eval

rm -f test.exp.output

echo Comparing Results to Baseline
for c in `sed -e 's/,/ /g' $2`; do
    echo Comparing Configuration $c;
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a expanded -c BASELINE-$c,WORK-$c >> test.exp.output; 
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a initial_h_value -c BASELINE-$c,WORK-$c >> test.exp.output; 
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a plan_length -c BASELINE-$c,WORK-$c >> test.exp.output;        
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a search_time -c BASELINE-$c,WORK-$c >> test.exp.output;
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a total_time -c BASELINE-$c,WORK-$c >> test.exp.output;
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a translator_vars -c BASELINE-$c,WORK-$c >> test.exp.output;
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a preprocessor_vars -c BASELINE-$c,WORK-$c >> test.exp.output;
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a translator_ops -c BASELINE-$c,WORK-$c >> test.exp.output;
    ./downward-reports.py -l WARNING `pwd`/exp-eval -r rel --change 5 -a preprocessor_ops -c BASELINE-$c,WORK-$c >> test.exp.output;       
done

rm -fr `pwd`/exp-eval

if [ -s test.exp.output ]; then
    cat test.exp.output
    exit 2    
else
    echo No Significant Differences;
fi    